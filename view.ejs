<html>
	<head>
		<meta charset="utf-8">
		<title><%=title%></title>
		<style>
			table{
				border: 2px solid #000000;
				border-collapse: collapse;
			}
			th, td{
				padding: 10px; text-align: center;
			}
		</style>
	</head>
	
	<body>
		<center>
			<h2><%=title%></h2>
			<table>
				<tr>
					<th>이름</th>
					<th>취미</th>
					<th>직업</th>
				</tr>
				<!-- forEach : 자바스크립트 반목문 분법 중 하나.
					forEach는 배열의 길이만큼 자동으로 반복하는 반복문이다.
					첫 번째 인수로는 값을, 두 번째 인수로는 인덱스를 제공한다.
				 -->
				<% list.forEach(function(value, index){ %>
				<% if ( value.name == "홍길동"){ %> <!--홍길동일 때에만 그 해당 데이터를 출력히라 -->
					<tr>
					<td><%=value.name%></td> 
					<td><%=value.hobby%></td>
					<td><%=value.job%></td>
					<!-- =은 단일변수명일 때만 가능하다. -->
				</tr>
				<% }; %>
				<% }); %>
			</table>
	</center>
	</body>
</html>